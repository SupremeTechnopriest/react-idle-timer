{
  "name": "react-idle-timer",
  "version": "4.6.4",
  "description": "Activity detection for React.js",
  "main": "./dist/index.min.js",
  "module": "./dist/index.es.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.es.js",
      "require": "./dist/index.min.js"
    },
    "./modern": "./dist/modern.js"
  },
  "scripts": {
    "build": "rollup -c && cp src/index.d.ts dist/index.d.ts && cp src/index.d.ts dist/modern.d.ts",
    "watch": "rollup -c -w",
    "clean": "rimraf dist coverage",
    "lint": "standard",
    "fix": "standard --fix",
    "test": "npm run lint && jest",
    "prepackage": "npm run clean && npm run test && npm run build",
    "package": "./scripts/package",
    "example-install": "cd examples/component && npm i && cd ../hook && npm i && cd ../component-ts && npm i && cd ../hook-ts && npm i",
    "example-component": "cd examples/component && npm start",
    "example-hook": "cd examples/hook && npm start"
  },
  "keywords": [
    "react",
    "idle",
    "idle timer",
    "timer",
    "activity",
    "active",
    "timeout",
    "session",
    "session expiration",
    "session timeout"
  ],
  "author": "Randy Lebeau <randylebeau@gmail.com> (https://github.com/supremetechnopriest)",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/supremetechnopriest/react-idle-timer.git"
  },
  "peerDependencies": {
    "prop-types": ">=15",
    "react": ">=16",
    "react-dom": ">=16"
  },
  "devDependencies": {
    "@babel/core": "^7.14.3",
    "@babel/plugin-transform-runtime": "^7.14.3",
    "@babel/preset-env": "^7.14.2",
    "@babel/preset-react": "^7.13.13",
    "@babel/runtime": "^7.14.0",
    "@rollup/plugin-babel": "^5.3.0",
    "@rollup/plugin-node-resolve": "^13.0.0",
    "@testing-library/react-hooks": "^6.0.0",
    "@wojtekmaj/enzyme-adapter-react-17": "^0.6.1",
    "babel-jest": "^26.6.3",
    "enzyme": "^3.11.0",
    "jest": "^26.6.3",
    "jest-esm-transformer": "^1.0.0",
    "prompt-list": "^3.2.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "rimraf": "^3.0.2",
    "rollup": "^2.48.0",
    "rollup-plugin-terser": "^7.0.2",
    "simulant": "^0.2.2",
    "standard": "^16.0.3"
  },
  "babel": {
    "presets": [
      "@babel/preset-env",
      "@babel/preset-react"
    ],
    "plugins": [
      "@babel/plugin-transform-runtime"
    ]
  },
  "jest": {
    "testPathIgnorePatterns": [
      "/examples/"
    ],
    "setupFiles": [
      "./test.setup.js"
    ],
    "collectCoverage": true
  },
  "standard": {
    "globals": [
      "beforeEach",
      "describe",
      "it",
      "expect"
    ],
    "ignore": [
      "examples/**",
      "**/__tests__/**"
    ]
  },
  "dependencies": {
    "worker-timers": "^7.0.42"
  }
}
